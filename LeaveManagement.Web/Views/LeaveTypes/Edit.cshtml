@model LeaveTypeVM

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row justify-content-center">
        <h1 class="row justify-content-center">Edit Leave Type</h1>

        <hr class="col-md-4"/>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="DefaultDays" class="control-label"></label>
                    <input asp-for="DefaultDays" class="form-control" />
                    <span asp-validation-for="DefaultDays" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

